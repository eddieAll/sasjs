{
  "compilerOptions": {
    "lib": ["ES2018", "DOM", "ES2019.String"],
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typedocOptions": {
    "out": "docs",
    "theme": "./node_modules/typedoc-neo-theme/bin/default",
    "outline": [
      {
        "API Documentation": {
          "Overview": "/kriaco/sasjs-docs/globals"
        }
      }
    ]
  }
}
